{
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.test.js", "./src/**/*.test.ts"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017"],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "outDir": "./lib",
        "rootDir": "./src",
        "downlevelIteration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
